`#include' <glib-2.0/glib.h>
`#include' <webkit2/webkit-web-extension.h>
`#include' <libguile.h>

G_MODULE_EXPORT void
webkit_web_extension_initialize (WebKitWebExtension *extension)
{
        scm_init_guile();
        char *code = syscmd(`guile  -c "(write (call-with-input-file \"webextensions.scm\" (@ (ice-9 textual-ports) get-string-all)))"');
        scm_eval_string(scm_from_locale_string(code));
        scm_call_1(scm_c_private_ref("webkit-webextensions", "entry-webextensions"), scm_from_pointer(extension, NULL));
        g_print("Wrapper library loaded!\n");
}
